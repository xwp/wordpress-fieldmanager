{
  "name": "alleyinteractive/wordpress-fieldmanager",
  "description": "Fieldmanager is a comprehensive toolkit for building forms, metaboxes, and custom admin screens for WordPress.",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-only",
  "keywords": [
    "wordpress",
    "plugin"
  ],
  "authors": [
    {
      "name": "Alley Interactive",
      "email": "noreply@alleyinteractive.com"
    }
  ],
  "require": {
    "composer/installers": "~1.0"
  },
  "require-dev": {
    "wp-coding-standards/wpcs": "^1",
    "phpunit/phpunit": "^4 || ^6",
    "apigen/apigen": "^4.1"
  },
  "scripts": {
    "lint": [
      "composer validate",
      "phpcs"
    ],
    "test": [
      "phpunit"
    ],
    "test-multisite": [
      "phpunit --config multisite.xml"
    ],
    "docs": [
      "apigen -c apigen.neon"
    ]
  }
}
